@model projekt_7_2_vj.Models.Artikl

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dodaj</title>
    <style>
        .validation-summary-errors {
            color: red;
            font-weight: bold;
        }

        .field-validation-error {
            color: red;
        }

        .field-validation-valid {
            display: none;
        }

        .input-validation-error {
            border: 1px solid #e80c4d;
        }
    </style>
    <script src="~/scripts/jquery-3.3.1.js"></script>
    <script src="~/scripts/jquery.validate.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/scripts/globalize.0.1.3/globalize.js"></script>
    <script src="~/scripts/globalize.0.1.3/cultures/globalize.culture.hr-HR.js"></script>
</head>
<body>
    <div>
        @Html.ValidationSummary(true)
    </div>
    <div> 
        @using (Html.BeginForm("Unesi", "Artikl"))
        {

            @Html.LabelFor(model => model.Kategorija)
            @Html.DropDownListFor(model => model.Kategorija , new SelectList((string[])ViewBag.Kategorija) , "--Unesi--") 
            @Html.ValidationMessageFor(model => model.Kategorija)

            <br />

            @Html.LabelFor(model => model.Naziv)
            @Html.EditorFor(model => model.Naziv )
            @Html.ValidationMessageFor(model => model.Naziv)

            <br />


            @Html.LabelFor(model => model.Cijena)
            @Html.EditorFor(model => model.Cijena )
            @Html.ValidationMessageFor(model => model.Cijena)

            <br />


            @Html.LabelFor(model => model.Kolicina)
            @Html.EditorFor(model => model.Kolicina)
            @Html.ValidationMessageFor(model => model.Kolicina)

            <br />

            <input type="submit" value="Unesi" />
        }
    </div>
</body>
</html>
